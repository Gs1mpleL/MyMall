<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanfeng.mapper.PmsProductCategoryMapper">
    <select id="selectLevelById" resultType="int">
        SELECT
            level
        FROM
            pms_product_category
        WHERE
            id = #{id}
    </select>

    <update id="updateNavStatus">
        UPDATE
            pms_product_category
        SET
            nav_status = #{navStatus}
        WHERE
            id in 
        <foreach collection="ids" item="id" index="index" open="(" separator="," close=")">
            #{id}
        </foreach>
     </update>

    <update id="updateShowStatus">
        UPDATE
        pms_product_category
        SET
        show_status = #{showStatus}
        WHERE
        id in
        <foreach collection="ids" item="id" index="index" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <resultMap id="mapWithChildren" type="com.wanfeng.dto.PmsProductCategoryWithChildrenItem">
        <result column="id" property="id" />
        <result column="name" property="name" />
        <collection property="children" ofType="list" columnPrefix="child_">
            <result column="id" property="id" />
            <result column="name" property="name" />
        </collection>
    </resultMap>
    <select id="getListWithChildren" resultMap="mapWithChildren">
        select
            c1.id,
            c1.name,
            c2.id   child_id,
            c2.name child_name
        from pms_product_category c1 left join pms_product_category c2 on c1.id = c2.parent_id
        where c1.parent_id = 0
    </select>
</mapper>